{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "git-submodules": {
    "enabled": true
  },
  "minimumReleaseAge": "0 days",
  "extends": [
    "config:recommended",
    "config:best-practices",
    "security:openssf-scorecard",
    "helpers:pinGitHubActionDigests",
    ":rebaseStalePrs"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "matchDepNames": [
        "go"
      ],
      "matchDepTypes": [
        "golang"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchPackageNames": [
        "github.com/gardener/landscaper",
        "github.com/gardener/landscaper-service"
      ],
      "description": "Update all components from landscaper immediately",
      "rebaseWhen": "auto",
      "minimumReleaseAge": "0 days",
      "enabled": true
    },
    {
      "description": "Combine openmcp-project updates in a single PR",
      "matchDatasources": [
        "go"
      ],
      "matchPackageNames": [
        "^github\\.com/openmcp-project/.*"
      ],
      "groupName": "openmcp-project dependencies",
      "groupSlug": "openmcp-project-dependencies",
      "rebaseWhen": "auto",
      "minimumReleaseAge": "0 days",
      "enabled": true
    },
    {
      "description": "Ignore our own image in chart as it will be updated on release",
      "matchPackageNames": ["ghcr.io/openmcp-project/images/mcp-operator"],
      "matchManagers": ["helm-values"],
      "enabled": false
    }
  ]
}
